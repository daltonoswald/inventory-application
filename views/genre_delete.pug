extends layout

block content

  h1 Delete Genre: #{genre.name}

  if genre_albums.length

    p #[strong Delete the following albums before attempting to delete this genre.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Albums

      dl
        each album in genre_albums
          dt
            a(href=album.url) #{album.title}
          dd #{album.release}

  else
    p Do you really want to delete this Genre?

    form(method='POST')
      div.form-group
        input#id.form-control(type='hidden', name='id', value=genre._id )

      button.btn.btn-primary(type='submit') Delete