extends layout

block content 
    h1= title 

    if artist_list.length 
        ul 
            each artist in artist_list 
                li 
                    a(href=artist.url) #{artist.name}
                    if (artist.date_of_breakup != null)
                        |  (#{artist.date_of_origin_formatted} - #{artist.date_of_breakup_formatted})
                    else 
                        |  (#{artist.date_of_origin_formatted} - )   
    else 
        p There are no artists.